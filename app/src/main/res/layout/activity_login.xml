<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.erik.safetrip.Login">

    <TextView
        android:id="@+id/labelLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:layout_centerHorizontal="true"
        android:text="@string/inicia_sesion"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/labelCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/correo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="36dp"
        android:layout_below="@+id/labelLogin"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/nombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelCorreo"
        android:layout_below="@+id/labelCorreo"
        android:hint="@string/hintCorreo"
        android:ems="10" />

    <TextView
        android:id="@+id/labelPassword0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contrasenia"
        android:layout_alignLeft="@+id/labelCorreo"
        android:layout_below="@+id/nombreUsuario"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/password0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelCorreo"
        android:layout_below="@+id/labelPassword0"
        android:hint="@string/hintPass"
        android:ems="10" />

    <Button
        android:id="@+id/botonEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password0"
        android:onClick="onEnviaRegistro"
        android:text="@string/enviar" />

</RelativeLayout>
